#include <esp_now.h>
#include <WiFi.h>

// ---- Peer MAC Address ----
uint8_t RES_MAC[] = {0xXX, 0xXX, 0xXX, 0xXX, 0xXX, 0xXX};

// ---- Data Structure ----
typedef struct {
  char data[200];
} esp_packet;

esp_packet incomingPacket;

// ---- ESP-NOW Receive Callback (IDF v5.x format) ----
void OnDataRecv(const esp_now_recv_info_t *info, const uint8_t *incomingData, int len) {
  memcpy(&incomingPacket, incomingData, len);

  // Print sender MAC
  Serial.print("Received from: ");
  for (int i = 0; i < 6; i++) {
    Serial.printf("%02X", info->src_addr[i]);
    if (i < 5) Serial.print(":");
  }
  Serial.println();

  // Print message content
  Serial.print("Message: ");
  Serial.println(incomingPacket.data);
}

// ---- Setup ----
void setup() {
  Serial.begin(115200);
  WiFi.mode(WIFI_STA);

  // Initialize ESP-NOW
  if (esp_now_init() != ESP_OK) {
    Serial.println("ESP-NOW init failed!");
    return;
  }

  // Register receive callback
  esp_now_register_recv_cb(OnDataRecv);

  // Add peer
  esp_now_peer_info_t peerInfo = {};
  memcpy(peerInfo.peer_addr, RES_MAC, 6);
  peerInfo.channel = 0;
  peerInfo.encrypt = false;
  if (esp_now_add_peer(&peerInfo) != ESP_OK) {
    Serial.println("Failed to add peer!");
  }

  Serial.println("ESP32 ready! Waiting for Serial input...");
}

// ---- Loop ----
void loop() {
  // --- Check for Serial input from Python ---
  if (Serial.available() > 0) {
    String pythonMessage = Serial.readStringUntil('\n');
    pythonMessage.trim();

    if (pythonMessage.length() > 0) {
      esp_packet packet;
      strcpy(packet.data, pythonMessage.c_str());

      // Send via ESP-NOW
      esp_err_t result = esp_now_send(RES_MAC, (uint8_t *)&packet, sizeof(packet));

      if (result == ESP_OK) {
        Serial.print("[ESP32] Sent Python message: ");
        Serial.println(packet.data);
      } else {
        Serial.println("[ESP32] Error sending message");
      }
    }
  }
}
